# ===========================================
# CONFIGURACIÓN DE PRODUCCIÓN - SEGURA
# ===========================================

# Entorno
ENV=prod

# Base de datos (REEMPLAZAR CON TUS CREDENCIALES REALES)
DATABASE_URL=postgresql://usuario:password@host:puerto/database
DATABASE_URL_LOCAL=postgresql://postgres:postgres@localhost:5432/neondb_local

# CORS - URLs permitidas (REEMPLAZAR CON TU DOMINIO REAL)
FRONTEND_ORIGINS=https://tu-app.vercel.app,https://tu-dominio.com

# Supabase (opcional)
SUPABASE_URL=tu_supabase_url
SUPABASE_KEY=tu_supabase_key

# JWT para autenticación (generar una clave segura)
JWT_SECRET_KEY=tu_clave_secreta_muy_larga_y_segura_aqui_cambiar_por_una_real
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# Rate limiting
RATE_LIMIT_PER_MINUTE=100

# Logging
LOG_LEVEL=INFO
